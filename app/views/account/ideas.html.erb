<main>
  <div class="content-wrapper">
    <div class="page-header">
      <h1>My Ideas</h1>
      <%= link_to('Create Idea', new_idea_path, class: 'btn') %>
    </div>
  </div>
  <div class="content-wrapper">
    <ul class="bare-list float-grid css-grid">
      <%# Iterates over all of the ideas to render the editable_idea_card for each idea in the collection
       and also pass idea instance to the partial%>
      <% @ideas.each do |idea| %>
        <li>
           <%= render(partial: 'editable_idea_card', locals: { idea: idea }) %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="see-more">
    <%= button_tag(class: "btn", type: "button") do %>
      <%= link_to "All Ideas", ideas_path %>
    <% end %>
  </div>
</main>
